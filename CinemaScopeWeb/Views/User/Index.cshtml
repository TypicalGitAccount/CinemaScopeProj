@model CinemaScopeWeb.ViewModels.UserProfileViewModel
@{
    ViewBag.Title = "UserProfile";
}
<div style="color: #FCFCFA">
    <div class="m-1 h2 form-floating list-inline" style="font-weight: bold">
        Welcome, @Model.FirstName @Model.LastName!
        @Html.ActionLink("Edit profile", "Edit", "User", new { area = "" }, new
        { @class = "btn-outline-light btn btn-lg btn-dark m-2", style = "width: 15%; float: right !important" })
    </div>
    <br/>
    <h3>Lists with films you interacted with:</h3>
    <div class="row accordion-item p-0 m-0" style="background-color: #1c191a; color: #FCFCFA">
        <h4 class="accordion-header" id="headingOne">
            <button class="accordion-button collapsed" style="outline: none; box-shadow: none; background-color: #1c191a; color: #FCFCFA"
                    type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="False" aria-controls="collapseOne">
                Watched Movies:
            </button>
        </h4>
        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne">
            <div class="accordion-body row">
                @{
                    foreach (var movie in Model.WatchedMovies)
                    {
                        <div class="col-2 m-3 p-1">
                            <div class="row justify-content-around">
                                <img class="btn p-0" src="@movie.Poster" style="width: 150px; height: 250px;" alt="" 
                                     onclick="location.href = '@Url.Action("Get", "Movies", new {id = movie.Id})'" />
                            </div>
                            <div class="row justify-content-center">
                                <div align="center">
                                    <h4>@Html.ActionLink(movie.Title, "Get", "Movies", new { Id = movie.Id }, new { @class = "p-0 text-decoration-none", style = "color: #FCFCFA" })</h4>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <div class="row accordion-item p-0 m-0" style="background-color: #1c191a; color: #FCFCFA">
        <h4 class="accordion-header" id="headingTwo">
            <button style="outline: none; box-shadow: none; background-color: #1c191a; color: #FCFCFA"
                    class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="False" aria-controls="collapseOne">
                Liked Movies:
            </button>
        </h4>
        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo">
            <div class="accordion-body row">
                @{
                    foreach (var movie in Model.LikedMovies)
                    {
                        <div class="col-2 m-3 p-1">
                            <div class="row justify-content-around">
                                <img class="btn p-0" src="@movie.Poster" style="width: 150px; height: 250px;" alt="" 
                                     onclick="location.href = '@Url.Action("Get", "Movies", new {id = movie.Id})'" />
                            </div>
                            <div class="row justify-content-center">
                                <div align="center">
                                    <h4>@Html.ActionLink(movie.Title, "Get", "Movies", new { Id = movie.Id }, new { @class = "p-0 text-decoration-none", style = "color: #FCFCFA" })</h4>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <div class="row accordion-item p-0 m-0" style="background-color: #1c191a; color: #FCFCFA">
        <h4 class="accordion-header collapsed" id="headingThree">
            <button style="outline: none; box-shadow: none; background-color: #1c191a; color: #FCFCFA"
                    class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="False" aria-controls="collapseOne">
                Disliked Movies:
            </button>
        </h4>
        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree">
            <div class="accordion-body row">
                @{
                    foreach (var movie in Model.DislikedMovies)
                    {
                        <div class="col-2 m-3 p-1">
                            <div class="row justify-content-around">
                                <img class="btn p-0" src="@movie.Poster" style="width: 150px; height: 250px;" alt=""
                                     onclick="location.href = '@Url.Action("Get", "Movies", new {id = movie.Id})'"/>
                            </div>
                            <div class="row justify-content-center">
                                <div align="center">
                                    <h4>@Html.ActionLink(movie.Title, "Get", "Movies", new { Id = movie.Id }, new { @class = "p-0 text-decoration-none", style = "color: #FCFCFA" })</h4>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <br />
</div>
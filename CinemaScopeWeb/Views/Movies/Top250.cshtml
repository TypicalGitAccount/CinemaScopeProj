@using IMDbApiLib.Models
@model List<Top250DataDetail>

@{
    ViewBag.Title = "Top250";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-black container-fluid" style="box-sizing: content-box; width: auto">
    <div class="films row d-flex justify-content-center">
        @foreach (var movie in Model)
        {
            <div id="film" class="col-2 m-3 p-1">
                <div class="row justify-content-around">
                    <img class="p-0" style="width: 200px; height: 300px" alt="" src="@movie.Image" />
                </div>
                <div class="row justify-content-center">
                    <div align="center">
                        <h2 class="p-0 h4 text-decoration-none" style="color: #FCFCFA">@movie.Rank. @movie.Title</h2>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@Html.Partial("_ShowMoreButton")